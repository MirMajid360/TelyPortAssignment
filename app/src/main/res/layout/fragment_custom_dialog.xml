<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
   android:background="@drawable/bg_white_rounded_corners">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_app_label_round_corners_8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Send Notification"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_app_label_round_corners_8"
        android:backgroundTint="@color/grey"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/btnSendNotification"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:text="Cancel" />


</RelativeLayout>

